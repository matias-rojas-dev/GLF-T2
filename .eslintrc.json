{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "jest",
        "react"
    ],
    "rules": {
        "prettier/prettier": 0,
        "no-constant-condition": ["error", { "checkLoops": false }],
        "no-unused-vars": "off",
        "react/prop-types": "off",
        "react/jsx-key": "off",
        "jest/valid-title": "off"
    }
}
